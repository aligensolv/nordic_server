<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Opprett Qrcode</title>
    <!-- Add Bootstrap CSS link -->
    <%- include('../../components/headers.ejs') %>
      <!-- SweetAlert2 -->
    <link rel="stylesheet" href="/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="/plugins/toastr/toastr.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <%- include('../../components/navbar') %>
        <%- include('../../components/sidebar') %> 

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="/">Hjem</a></li>
                    <li class="breadcrumb-item"><a href="/complaints">Complaints</a></li>
                    <li class="breadcrumb-item">Qrcodes</li>
                    <li class="breadcrumb-item active">Legge til</li>
                    </ol>
                </div><!-- /.col -->
                </div><!-- /.row -->

            </div><!-- /.container-fluid -->
            </div>

            <div class="content">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                              <h3 class="card-title d-flex justify-content-between align-items-center">
                                Opprett Qrcode
                              </h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                              <form class="container-fluid" id="createComplaintQrcodeForm">
                                <div>
                                  <div class="input-group form-group mb-3">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text"><i class="fas fa-location-arrow"></i></span>
                                      </div>
                                      <input class="form-control" placeholder="Location Name" name="location"
                                        id="location">
                                    </div>

                                    <div class="input-group form-group mb-3">
                                      <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user-shield"></i></span>
                                      </div>
                                      <input class="form-control" placeholder="Location Owner Name" name="location_owner_name"
                                        id="location_owner_name">
                                    </div>

                                    <div class="input-group form-group mb-3">
                                      <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                      </div>
                                      <input class="form-control" placeholder="Phone Number" name="phone_number"
                                        id="phone_number">
                                    </div>

                                    <div class="form-group">
                                      <label>Categories</label>
                                      <select class="custom-select" id="categories" name="categories" multiple="multiple">
                                    
                                      </select>
                                    </div>



                                    <div class="d-flex justify-content-center align-items-center mt-3 btn-group">
                                      <button type="button" class="btn btn-info" onclick="createComplaintQrcode()">Legge til</button>
                                    <a href="/imeis" class="btn btn-secondary ps-3 pe-3">Avbryt</a>
                                    </div>
                                  </div>
                            </form>
                                         
                            </div>
                            <!-- /.card-body -->
                          </div>
                    </div>
                </div>
            </div>
    </div>

        <%- include('../../components/footer') %>
    </div>

    <%- include('../../components/scripts.ejs') %>
    
    <script src="/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="/plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="/plugins/toastr/toastr.min.js"></script>
    <script src="../../plugins/select2/js/select2.full.min.js"></script>

    <script>
      async function createComplaintQrcode() {
        const location = document.getElementById('location').value;
        const location_owner_name = document.getElementById('location_owner_name').value;
        const phone_number = document.getElementById('phone_number').value;
        const categories = $("#categories").val()
        try {
          const response = await fetch('/api/complaints/qrcodes/create', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json; charset=UTF-8'
            },
            body: JSON.stringify({
              location,
              location_owner_name,
              phone_number,
              categories
            })
          });
          const data = await response.json();
          if (response.status == 200) {
            Swal.fire({
              title: 'Qrcode lagt til',
              text: 'Qrcode ble lagt til',
              icon: 'success',
              confirmButtonText: 'OK'
            }).then(() => {
              window.location.href = '/complaints/qrcodes';
            });
          } else {
            Swal.fire({
              title: 'Feil',
              text: data.message,
              icon: 'error',
              confirmButtonText: 'OK'
            });
          }
        } catch (error) {
          console.error('Error creating qrcode:', error);
        }
      }

      async function populateComplaintCategories() {
            try {
                const categoriesDropdown = document.getElementById('categories');

                // Fetch zones data from /admin/api/zones
                const response = await fetch('/api/complaints/categories');
                const categories = await response.json();

                // Populate the dropdown options
                categories.forEach((category) => {
                    const option = document.createElement('option');
                    option.value = category.name;
                    option.text = category.name;
                    categoriesDropdown.appendChild(option);
                });
            } catch (error) {
                console.error('Error fetching and populating zones:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', async function () {
          $('select').select2();
            await populateComplaintCategories();
        });
    </script>


</body>
</html>


