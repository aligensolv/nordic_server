<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>P-Automat qr-kode</title>
        <%- include('../components/headers') %>

        <style>
    .container {
      max-width: 600px;
      margin: 0 auto;
    }
    .detail-row {
      margin-bottom: 16px;
    }
    .detail-label {
      font-weight: bold;
    }
        </style>
    </head>
    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <%- include('../components/navbar') %>
            <%- include('../components/sidebar') %>

            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="/">Hjem</a></li>
                    <li class="breadcrumb-item"><a href="/complaints">P-Automater</a></li>
                    <li class="breadcrumb-item"><%= complaint._id %></li>
                    <li class="breadcrumb-item active">View</li>
                    </ol>
                </div><!-- /.col -->
                </div><!-- /.row -->

            </div><!-- /.container-fluid -->
            </div>

                <div class="content">
                    <div class="container">
                        <% if (complaint.image) { %>
                          <img src="<%= complaint.image %>" alt="Complaint Image" style="object-fit: contain;" width="100%" height="200">
                          <br><br>
                        <% } %>
                        <div class="detail-row">
                          <span class="detail-label">Complaint ID:</span> <%= complaint.id %>
                        </div>
                        <hr>
                        <div class="detail-row">
                          <span class="detail-label">Type:</span> <%= complaint.type %>
                        </div>
                        <hr>
                        <div class="detail-row">
                          <span class="detail-label">Plate Number:</span> <%= complaint.plateNumber || 'N/A' %>
                        </div>
                        <hr>
                        <div class="detail-row">
                          <span class="detail-label">Phone Number:</span> <%= complaint.phoneNumber || 'N/A' %>
                        </div>
                        <hr>
                        <div class="detail-row">
                          <span class="detail-label">Created At:</span> <%= complaint.created_at %>
                        </div>
                        <hr>
                        <div class="detail-row">
                          <span class="detail-label">Status:</span> <%= complaint.status %>
                        </div>
                        <hr>
                        <div class="detail-row">
                          <span class="detail-label">Location:</span> <%= complaint.location.name %>, <%= complaint.location.address %>
                        </div>
                        <hr>
                        <% if (complaint.acceptedAt) { %>
                          <div class="detail-row">
                            <span class="detail-label">Accepted At:</span> <%= complaint.acceptedAt %>
                          </div>
                          <hr>
                        <% } %>
                        <% if (complaint.acceptedBy) { %>
                          <div class="detail-row">
                            <span class="detail-label">Accepted By:</span> <%= complaint.acceptedBy.name %>
                          </div>
                          <hr>
                        <% } %>
                        <% if (complaint.completedAt) { %>
                          <div class="detail-row">
                            <span class="detail-label">Completed At:</span> <%= complaint.completedAt %>
                          </div>
                          <hr>
                        <% } %>
                        <% if (complaint.completedBy) { %>
                          <div class="detail-row">
                            <span class="detail-label">Completed By:</span> <%= complaint.completedBy.name %>
                          </div>
                          <hr>
                        <% } %>
                      </div>
                </div>
            </div>

        <%- include('../components/footer') %>

        </div>

        <%- include('../components/scripts') %>

    </body>
</html>